{
	"private": true,
	"license": "Apache-2.0",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"test": "yarn lint && yarn test:js",
		"test:js": "jest --config=./jest.config.json",
		"test:watch": "yarn test:js -- --watch",
		"test:coverage": "yarn test:js -- --coverage",
		"build": "yarn ramda-extension build",
		"build:docs": "yarn docs build",
		"publish:docs": "yarn docs publishToFirebase",
		"prepare": "husky install && yarn ramda-extension build",
		"format": "prettier --ignore-path .gitignore --write '**/*.{js,json}' && yarn lint --fix",
		"lint": "eslint --ext .js ./packages",
		"lint:fix": "yarn lint --fix",
		"generate": "plop --plopfile ./.plop/plopfile.js",
		"ramda-extension": "yarn workspace ramda-extension",
		"docs": "yarn workspace ramda-extension-docs",
		"_postinstall": "husky install",
		"prepublish": "pinst --disable",
		"postpublish": "pinst --enable && yarn publish:docs"
	},
	"devDependencies": {
		"@babel/cli": "^7.12.8",
		"@babel/core": "^7.11.6",
		"@commitlint/cli": "^12.0.1",
		"@commitlint/config-conventional": "^12.0.1",
		"babel-core": "^7.0.0-bridge",
		"babel-eslint": "^10.0.1",
		"babel-jest": "^26.6.3",
		"babel-plugin-annotate-pure-calls": "^0.4.0",
		"babel-preset-react-union": "^0.20.0",
		"cross-env": "^7.0.3",
		"eslint": "7.23.0",
		"eslint-config-react-union": "^0.20.0",
		"eslint-plugin-babel": "5.3.1",
		"eslint-plugin-import": "2.22.1",
		"eslint-plugin-ramda": "^2.5.1",
		"husky": "^6.0.0",
		"jest": "26.6.3",
		"lerna": "^4.0.0",
		"lint-staged": "^10.5.4",
		"pinst": "^2.1.6",
		"plop": "^2.6.0",
		"prettier": "^2.2.1"
	},
	"name": "ramda-extension"
}
