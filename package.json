    "eslint": "^5.5.0",
    "eslint-config-react-union": "0.7.0",
    "eslint-plugin-babel": "^5.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.11.1",
    "jest": "23.6.0",
    "plop": "^2.0.0"
